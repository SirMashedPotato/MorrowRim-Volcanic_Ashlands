<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Megafauna</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- add select animals to ashlands -->

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="Megalania"]/race/wildBiomes</xpath>
					<value>
						<MorrowRim_VolcanicAshlands>0.01</MorrowRim_VolcanicAshlands>
					</value>
				</li>

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="Gigantophis"]/race/wildBiomes</xpath>
					<value>
						<MorrowRim_VolcanicAshlands>0.01</MorrowRim_VolcanicAshlands>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="Pulmonoscorpius"]/race/wildBiomes</xpath>
					<value>
						<MorrowRim_VolcanicAshlands>0.05</MorrowRim_VolcanicAshlands>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>

