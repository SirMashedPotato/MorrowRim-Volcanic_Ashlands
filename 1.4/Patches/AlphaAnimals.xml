<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Animals</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
				
				<!-- add select alpha animals animals to ashlands -->

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/BiomeDef[defName="MorrowRim_VolcanicAshlands"]/wildAnimals</xpath>
					<value>
						<AA_SpinedGow>0.4</AA_SpinedGow>
						<AA_Wildpawn>0.2</AA_Wildpawn>
						<AA_PebbleMit>0.2</AA_PebbleMit>
						<AA_Metallovore>0.1</AA_Metallovore>
						<AA_FireWasp>0.1</AA_FireWasp>
						<AA_Thermadon>0.01</AA_Thermadon>
						<AA_MammothWorm>0.01</AA_MammothWorm>
						<AA_ChemfuelMyrmidon>0.01</AA_ChemfuelMyrmidon>
						<AA_Barbslinger>0.01</AA_Barbslinger>
						<AA_Cinderlisk>0.01</AA_Cinderlisk>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>

