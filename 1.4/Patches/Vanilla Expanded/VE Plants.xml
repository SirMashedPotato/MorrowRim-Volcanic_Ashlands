<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
	
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/BiomeDef[defName="MorrowRim_VolcanicAshlands"]/wildPlants</xpath>
					<value>
						<VCE_Opuntia>0.05</VCE_Opuntia>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/VanillaPlantsExpanded.TillableTerrainDef[defName="VCE_AcceptedTillableTerrains"]/terrains</xpath>
					<value>
						<li>MorrowRim_VolcanicAsh</li>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>
