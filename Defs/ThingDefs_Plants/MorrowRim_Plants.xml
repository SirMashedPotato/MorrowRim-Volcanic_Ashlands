<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Fire Fern -->
	
	<ThingDef ParentName="PlantBase">
		<defName>MorrowRim_FireFern</defName>
		<label>fire fern</label>
		<modExtensions>
			<li Class="MorrowRim.ExtendedRaceProperties">
                <ashResistant>Resistant</ashResistant>
            </li>
			<li Class="MorrowRim.PlantProperties">
				<forceOntoTerrain>true</forceOntoTerrain>
				<whitelist>false</whitelist>
				<terrainList>
					<li>Marsh</li>
					<li>MarshyTerrain</li>
				</terrainList>
			</li>
		</modExtensions>
		<description>A small fern that can often be found growing in the volcanic ashlands. It's ability to grow in poor quality soil, and resistance to extreme heat, has allowed it to grow where no other ferns dare.</description>
		<statBases>
		  <MaxHitPoints>30</MaxHitPoints>
		  <Beauty>10</Beauty>
		  <BeautyOutdoors>10</BeautyOutdoors>
		  <Nutrition>0.2</Nutrition>
		  <Flammability>0.2</Flammability>
		</statBases>
		<pathCost>3</pathCost>
		<graphicData>
		  <texPath>MorrowRim/Plants/MorrowRim_FireFern</texPath>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible />
		<plant>
		  <fertilityMin>0.2</fertilityMin>
		  <fertilitySensitivity>0.6</fertilitySensitivity>
		  <growDays>3.5</growDays>
		  <growMinGlow>0.3</growMinGlow>
		  <harvestWork>60</harvestWork>
		  <maxMeshCount>1</maxMeshCount>
		  <visualSizeRange>0.95~1.15</visualSizeRange>
		  <topWindExposure>0.2</topWindExposure>
		  <wildClusterRadius>3</wildClusterRadius>
		  <wildClusterWeight>40</wildClusterWeight>
			  <wildOrder>1</wildOrder>
			  <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
		</plant>
	</ThingDef>
	
