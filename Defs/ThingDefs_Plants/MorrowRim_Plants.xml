	<!-- leather cap -->
	
	<ThingDef ParentName="TreeBase">
		<modExtensions>
			<li Class="MorrowRim.ExtendedRaceProperties">
                <ashResistant>Resistant</ashResistant>
            </li>
		</modExtensions>
		<defName>MorrowRim_LeatherCap</defName>
		<label>leather cap mushroom</label>
		<description>A giant mushroom only found in the volcanic ashlands. It's leather like covering protects it from the intense heat, and from catching on fire. The stem hardens as the mushroom ages, eventually hardening into an almost wood-like material.\n\nRequires soil with a high level of fertility to grow, but can grow without light.\nResistant to ash storms.</description>
		<graphicData>
		  <texPath>MorrowRim/Plants/MorrowRim_LeatherCap</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
		  <shadowData>
			<volume>(0.2, 0.35, 0.13)</volume>
			<offset>(-0.03,0,-0.44)</offset>
		  </shadowData>
		</graphicData>
		<statBases>
		  <Beauty>2</Beauty>
		  <BeautyOutdoors>2</BeautyOutdoors>
		  <Flammability>0.2</Flammability>
		</statBases>
		<plant>
		  <fertilitySensitivity>1.0</fertilitySensitivity>
		  <fertilityMin>1.2</fertilityMin>
		  <growMinGlow>-0.5</growMinGlow>
		  <growOptimalGlow>0.9</growOptimalGlow>
		  <dieIfLeafless>false</dieIfLeafless>
		  <neverBlightable>true</neverBlightable>
		  <growDays>30</growDays>
		  <visualSizeRange>1.5~2.6</visualSizeRange>
		  <harvestWork>1000</harvestWork>
		  <harvestYield>40</harvestYield>
		  <wildClusterWeight>45</wildClusterWeight>
		  <sowMinSkill>10</sowMinSkill>
		  <sowResearchPrerequisites>
				<li>TreeSowing</li>
				<li>MorrowRim_AshSowing</li>
		  </sowResearchPrerequisites>
		  <mustBeWildToSow>false</mustBeWildToSow>
		  <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
		</plant>
	</ThingDef>
	
